<div class="container">

    <div class="row mb-3 jumbotron-heading">

      <div class="col-md-8">

        <h2>Highest Rated Restaurants in Chicago</h2>
      </div>

    </div>
    
    <div class = "row">
      <% 5.times do |index|%>        
        <div class = "col-md-2">
          <div class= "card mb-2 box-shadow" >
            <img class = "card-img-top img-thumbnail" src = "<%=@highest_rated.at(index).restaurant.image%>">
            <div class="card-body">
              <h5 class="card-text">
                <%=@highest_rated.at(index).restaurant.name%>
              </h5>
              <p>Average Rating:</p>
              <p><%=@highest_rated.at(index).average_rating.round(1)%></p>

            </div>

          </div>
        </div>


      <% end %>
    
</div>

