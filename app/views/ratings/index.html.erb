<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all ratings
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new rating
    </h2>

    <form action="/insert_rating" method="post">
      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="restaurant_id_box">
          Restaurant
        </label>

        <input type="text" id="restaurant_id_box" name="query_restaurant_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="rating_box">
          Rating
        </label>

        <input type="text" id="rating_box" name="query_rating" class="form-control">
      </div>

      <div class="form-group">
        <label for="comment_box">
          Comment
        </label>

        <textarea id="comment_box" name="query_comment" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create rating
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Restaurant
        </th>

        <th>
          Rating
        </th>

        <th>
          Comment
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ratings.each do |rating| %>
      <tr>
        <td>
          <%= rating.id %>
        </td>

        <td>
          <%= rating.user_id %>
        </td>

        <td>
          <%= rating.restaurant_id %>
        </td>

        <td>
          <%= rating.rating %>
        </td>

        <td>
          <%= rating.comment %>
        </td>

        <td>
          <%= time_ago_in_words(rating.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(rating.updated_at) %> ago
        </td>

        <td>
          <a href="/ratings/<%= rating.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
